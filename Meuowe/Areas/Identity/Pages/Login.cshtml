@page
@model Meuowe.Areas.Identity.Pages.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-12 col-sm-12 col-md-6">
            <div class="meuowe-jumbotron">
                <h3 class="text-orange">login</h3>
                <hr class="meuowe-jumbotron-seperator" />
                <form id="identity" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="meuowe-form-group">
                        <input asp-for="Input.UserName" class="form-control" placeholder="user name" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn meuowe-button-primary">log in</button>
                    </div>
                    <hr class="meuowe-jumbotron-seperator" />
                    <div class="form-group">
                        <a class="btn  meuowe-button-primary" id="forgot-password" asp-page="./ForgotPassword">forgot password?</a>
                        <a class="btn meuowe-btn-outline-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
