@page
@model Meuowe.Areas.Identity.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-12 col-sm-12 col-md-6">
            <div class="meuowe-jumbotron">
                <h3 class="text-orange">forgot password?</h3>
                <hr class="meuowe-jumbotron-seperator" />
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="email address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn meuowe-button-primary">submit</button>
                    </div>
                    <hr class="meuowe-jumbotron-seperator" />
                    <div class="form-group">
                        <a class="btn meuowe-btn-outline-primary" id="login-page" asp-page="./Login">go to login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
