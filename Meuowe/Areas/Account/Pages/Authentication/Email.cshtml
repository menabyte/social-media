@page
@model Meuowe.Areas.Account.Pages.Authentication.EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = Meuowe.Areas.Navigation.Pages.ManageNavPages.Email;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-12 col-sm-12 col-md-6">
            <div class="meuowe-jumbotron">
                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <h3 class="text-orange">current email</h3>
                        <hr class="meuowe-jumbotron-seperator" />
                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" disabled />
                                <div class="input-group-append">
                                    <span class="input-group-text text-success font-weight-bold">âœ“</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <input asp-for="Email" class="form-control" disabled />
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                        }
                    </div>
                    <div class="form-group">
                        <h class="text-orange">new email</h>
                        <input asp-for="Input.NewEmail" class="form-control" />
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn meuowe-button-primary">change email</button>
                </form>
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
